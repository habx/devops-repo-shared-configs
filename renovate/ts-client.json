{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>habx/devops-repo-shared-configs//renovate/ts-front",
        "github>habx/devops-repo-shared-configs//renovate/ts-npmrc-private"
    ],
    "enabledManagers": [
        "npm",
        "circleci",
        "dockerfile"
    ],
    "ignoreDeps": [
        "husky",
        "vite-plugin-checker"
    ],
    "addLabels": [
        "renovate:client"
    ],
    "packageRules": [
        {
          "matchPackageNames": [
              "@apollo/client"
          ],
          "allowedVersions": "<3.7"
        },
        {
            "matchManagers": [
                "dockerfile"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "addLabels": [
                "automerge-noupdate"
            ]
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchDepTypes": [
                "devDependencies"
            ],
            "addLabels": [
                "automerge-noupdate"
            ]
        },
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "matchDepTypes": [
                "dependencies",
                "peerDependencies"
            ],
            "addLabels": [
                "automerge-noupdate"
            ]
        }
    ]
}
