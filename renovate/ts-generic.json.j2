{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>habx/devops-repo-shared-configs//renovate/global",
    "github>habx/devops-repo-shared-configs//renovate/ts-package-rules"{% if public != "true" %},
    "github>habx/devops-repo-shared-configs//renovate/ts-npmrc"{% endif %}{% if client != "true" %},
    "github>habx/devops-repo-shared-configs//renovate/ts-non-esm"{% endif %}
  ],
  "description": "WARNING: Autogenerated from ts-generic.json.j2",
  "ignoreDeps": ["husky"{% if client == "true" and lib != "true" %}, "vite-plugin-checker"{% endif %}],
  "addLabels": [
    "renovate"
    {% if client == "true" %},"renovate:ts-client"{% endif %}
    {% if lib == "true" %},"renovate:ts-lib"{% endif %}
    {% if client != "true" and lib != "true" %}, "renovate:ts-service"{% endif %}
  ],
  "packageRules": [{% if client == "true" and lib != "true" %}
    {
        "matchPackageNames": [
            "cypress"
        ],
        "allowedVersions": "<9.1"
    },{% endif %}
    {
      "updateTypes": [{% if client != "true" and lib != "true" %}
        "major",{% endif %}
        "minor",
        "patch"
      ],
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true,
      "labels": [
        "automerge-noupdate",
        "dependencies"
      ]
    },
    {
      "updateTypes": [{% if client != "true" %}
        "minor",{% endif %}
        "patch"
      ],
      "depTypeList": [
        "dependencies",
        "peerDependencies"
      ],
      "automerge": true,
      "labels": [
        "automerge-noupdate",
        "dependencies"
      ]
    }
  ]
}
