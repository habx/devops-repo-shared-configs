{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>habx/devops-repo-shared-configs//renovate/global",
    "github>habx/devops-repo-shared-configs//renovate/ts-package-rules"
  ],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true,
      "addLabels": [
        "automerge-noupdate"
      ]
    },
    {
      "updateTypes": [
        "patch"
      ],
      "depTypeList": [
        "dependencies",
        "peerDependencies"
      ],
      "automerge": true,
      "addLabels": [
        "automerge-noupdate"
      ]
    }
  ]
}
