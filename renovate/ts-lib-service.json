{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>habx/devops-repo-shared-configs//renovate/global",
        "github>habx/devops-repo-shared-configs//renovate/ts-package-rules",
        "github>habx/devops-repo-shared-configs//renovate/ts-npmrc",
        "github>habx/devops-repo-shared-configs//renovate/ts-non-esm"
    ],
    "ignoreDeps": [
        "husky"
    ],
    "packageRules": [
        {
            "updateTypes": [
                "minor",
                "patch"
            ],
            "depTypeList": [
                "devDependencies"
            ],
            "automerge": true,
            "labels": [
                "automerge-noupdate",
                "dependencies"
            ]
        },
        {
            "updateTypes": [
                "minor",
                "patch"
            ],
            "depTypeList": [
                "dependencies",
                "peerDependencies"
            ],
            "automerge": true,
            "labels": [
                "automerge-noupdate",
                "dependencies"
            ]
        }
    ]
}