{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>habx/devops-repo-shared-configs//renovate/global#v0.2.0",
        "github>habx/devops-repo-shared-configs//renovate/ts-package-rules#v0.2.0",
        "github>habx/devops-repo-shared-configs//renovate/ts-npmrc#v0.2.0",
        "github>habx/devops-repo-shared-configs//renovate/ts-non-esm#v0.2.0"
    ],
    "ignoreDeps": [
        "husky"
    ],
    "packageRules": [
        {
            "updateTypes": [
                "minor",
                "patch"
            ],
            "depTypeList": [
                "devDependencies"
            ],
            "automerge": true,
            "labels": [
                "automerge-noupdate",
                "dependencies"
            ]
        },
        {
            "updateTypes": [
                "minor",
                "patch"
            ],
            "depTypeList": [
                "dependencies",
                "peerDependencies"
            ],
            "automerge": true,
            "labels": [
                "automerge-noupdate",
                "dependencies"
            ]
        }
    ]
}