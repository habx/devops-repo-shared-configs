{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":semanticCommits"
    ],
    "enabledManagers": [
        "circleci"
    ],
    "dependencyDashboard": true,
    "dependencyDashboardAutoclose": true,
    "rangeStrategy": "bump",
    "separateMinorPatch": true,
    "prConcurrentLimit": 10,
    "prHourlyLimit": 2,
    "prCreation": "not-pending",
    "timezone": "Europe/Paris",
    "vulnerabilityAlerts": {
        "addLabels": [
            "security"
        ],
        "prPriority": 10
    },
    "labels": [
        "dependencies",
        "renovate",
        "squash"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "circleci"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "addLabels": [
                "renovate:circleci",
                "automerge-noupdate"
            ]
        }
    ]
}
