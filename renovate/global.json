{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "enabledManagers": [
        "renovate",
        "circleci"
    ],
    "dependencyDashboard": true,
    "dependencyDashboardAutoclose": true,
    "rangeStrategy": "bump",
    "separateMinorPatch": true,
    "prConcurrentLimit": 10,
    "prHourlyLimit": 10,
    "timezone": "Europe/Paris",
    "schedule": [
        "before 6:00am on Monday"
    ],
    "vulnerabilityAlerts": {
        "addLabels": [
            "security"
        ],
        "schedule": [
            "at any time"
        ],
        "prPriority": 10
    },
    "labels": [
        "dependencies",
        "renovate"
    ]
}