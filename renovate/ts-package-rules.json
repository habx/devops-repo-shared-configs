{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabledManagers": [
        "npm",
        "circleci"
    ],
    "stabilityDays": 7,
    "prCreation": "not-pending",
    "ignoreDeps": ["husky", "vite-plugin-checker"],
    "packageRules": [
        {
            "matchPackagePatterns": [
                "^@habx/"
            ],
            "prPriority": 5,
            "stabilityDays": 0,
            "prCreation": "immediate"
        },
        {
            "matchPackagePatterns": [
                "^@habx/"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "addLabels": [
                "automerge-noupdate"
            ]
        },
        {
            "matchPackageNames": [
                "@habx/lib-client-housing-2d",
                "@habx/lib-housing-mosaic"
            ],
            "groupName": "mosaic changes"
        },
        {
            "matchPackageNames": [
                "typescript",
                "typedoc"
            ],
            "groupName": "typescript changes"
        },
        {
            "description": "This allows clients to upgrade the 3D libraries together",
            "matchPackageNames": [
                "@habx/lib-client-housing-3d",
                "@habx/lib-housing-3d-scene"
            ],
            "groupName": "3d changes"
        },
        {
            "matchPackageNames": [
                "ts-jest",
                "jest",
                "jest-junit",
                "@types/jest"
            ],
            "groupName": "jest changes",
            "addLabels": [
                "automerge-noupdate"
            ]
        },
        {
            "matchPackagePatterns": [
                "^@cubejs-client/"
            ],
            "groupName": "Cube.js frontend changes"
        },
        {
            "matchPackagePatterns": [
                "^@cubejs-backend/"
            ],
            "groupName": "Cube.js backend changes"
        },
        {
            "matchPackageNames": [
                "lodash",
                "typescript",
                "lint-staged"
            ],
            "updateTypes": [
                "major",
                "minor",
                "patch"
            ],
            "prPriority": -5,
            "addLabels": [
                "automerge-noupdate"
            ]
        },
        {
            "packagePatterns": [
                "^@sentry/",
                "^@types/"
            ],
            "updateTypes": [
                "minor",
                "patch"
            ],
            "prPriority": -10,
            "addLabels": [
                "automerge-noupdate"
            ]
        },
        {
            "description": "We don't need to update AWS SDK very often",
            "matchPackageNames": [
                "aws-sdk"
            ],
            "stabilityDays": 3,
            "prPriority": -10
        },
        {
            "description": "GraphQL should stay below v16",
            "matchPackageNames": [
                "graphql"
            ],
            "allowedVersions": "<16"
        },
        {
            "matchPackageNames": [
                "cypress"
            ],
            "allowedVersions": "<9.1"
        },
        {
            "matchPackageNames": [
                "three",
                "@types/three",
                "react-scripts"
            ],
            "automerge": false,
            "addLabels": ["automerge-disabled"]
        }
    ]
}
