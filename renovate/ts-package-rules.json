{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabledManagers": [
        "npm",
        "renovate"
    ],
    "constraints": {
        "node": {
            "version": "<17"
        }
    },
    "ignoreDeps": ["husky", "vite-plugin-checker"],
    "packageRules": [
        {
            "packagePatterns": [
                "^@habx/"
            ],
            "schedule": [
                "at any time"
            ],
            "prPriority": 5
        },
        {
            "packagePatterns": [
                "^@habx/"
            ],
            "updateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "addLabels": [
                "automerge-noupdate"
            ]
        },
        {
            "packageNames": [
                "@habx/lib-client-housing-2d",
                "@habx/lib-housing-mosaic"
            ],
            "groupName": "mosaic changes"
        },
        {
            "packageNames": [
                "typescript",
                "typedoc"
            ],
            "groupName": "typescript changes"
        },
        {
            "description": "This allows clients to upgrade the 3D libraries together",
            "packageNames": [
                "@habx/lib-client-housing-3d",
                "@habx/lib-housing-3d-scene"
            ],
            "groupName": "3d changes"
        },
        {
            "packageNames": [
                "ts-jest",
                "jest",
                "@types/jest"
            ],
            "groupName": "jest changes"
        },
        {
            "packageNames": [
                "lodash",
                "typescript",
                "lint-staged"
            ],
            "updateTypes": [
                "major",
                "minor",
                "patch"
            ],
            "automerge": true,
            "prPriority": -5,
            "addLabels": [
                "automerge-noupdate"
            ]
        },
        {
            "packagePatterns": [
                "^@sentry/",
                "^@types/"
            ],
            "updateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "prPriority": -10,
            "addLabels": [
                "automerge-noupdate"
            ]
        },
        {
            "description": "We don't need to update AWS SDK very often",
            "matchPackageNames": [
                "aws-sdk"
            ],
            "schedule": [
                "monthly"
            ]
        },
        {
            "description": "GraphQL should stay below v16",
            "matchPackageNames": [
                "graphql"
            ],
            "allowedVersions": "<16"
        },
        {
            "matchPackageNames": [
                "cypress"
            ],
            "allowedVersions": "<9.1"
        },
        {
            "packageNames": [
                "three",
                "@types/three",
                "react-scripts"
            ],
            "automerge": false,
            "stabilityDays": 3,
            "labels": ["dependencies", "renovate", "automerge-disabled"]
        }
    ]
}
