{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>habx/devops-repo-shared-configs//renovate/ts-front",
    "github>habx/devops-repo-shared-configs//renovate/ts-npmrc-private"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
          "@habx/config-ci-front"
      ],
      "allowedVersions": "<1"
    },
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true,
      "addLabels": [
        "automerge-noupdate"
      ]
    },
    {
      "updateTypes": [
        "patch"
      ],
      "depTypeList": [
        "dependencies",
        "peerDependencies"
      ],
      "automerge": true,
      "addLabels": [
        "automerge-noupdate"
      ]
    }
  ]
}