{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>habx/devops-repo-shared-configs//renovate/global"
    ],
    "enabledManagers": [
        "circleci",
        "dockerfile",
        "gomod"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "gomod"
            ],
            "addLabels": [
                "renovate:golang"
            ]
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "matchManagers": [
                "gomod"
            ],
            "addLabels": [
                "automerge-noupdate"
            ]
        },
        {
            "matchUpdateTypes": [
                "major",
                "minor"
            ],
            "matchManagers": [
                "gomod"
            ],
            "matchPackagePatterns": [
                "^github.com/habx/"
            ],
            "addLabels": [
                "automerge-noupdate"
            ],
            "prPriority": 5
        },
        {
            "matchPackagePatterns": [
                "^gorm.io/"
            ],
            "groupName": "gorm changes"
        }
    ]
}
