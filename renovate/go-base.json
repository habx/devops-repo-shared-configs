{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>habx/devops-repo-shared-configs//renovate/global"
    ],
    "enabledManagers": [
        "circleci",
        "dockerfile",
        "golang"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "gomod"
            ],
            "addLabels": [
                "renovate:golang"
            ]
        },
        {
            "updateTypes": [
                "patch",
                "pin",
                "digest"
            ],
            "matchManagers": [
                "gomod"
            ],
            "automerge": true,
            "addLabels": [
                "automerge-noupdate"
            ]
        },
        {
            "updateTypes": [
                "major",
                "minor"
            ],
            "matchManagers": [
                "gomod"
            ],
            "matchPackagePatterns": [
                "^github.com/habx/"
            ],
            "automerge": true,
            "addLabels": [
                "automerge-noupdate"
            ],
            "schedule": [
                "at any time"
            ],
            "prPriority": 5
        }
    ]
}